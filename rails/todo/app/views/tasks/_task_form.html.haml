.modal-dialog
  .modal-content
    .modal-header
      %h1 new task
    = simple_form_for task, class: 'clearfix' do |f|
      .modal-body
        = f.input :title
        = f.input :note
        = f.input :completed, as: :string, input_html: {class: 'datepicker'}
      .modal-footer
        = f.submit 'save', class: 'btn btn-primary'
